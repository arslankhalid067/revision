<%= render 'nav' %>
<div class="container">
    <a class="btn btn-info mt-3" href="<%= new_article_path %>">Create New Article</a>
    <% if @articles.any?  %>
    <div class="row">
        <% @articles.each do |article|  %>
            <div class="col-lg-4">
                <div class="card mt-5">
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to article.title,article %></h5>
                        <p class="card-text"><%= article.body %></p>
                        <%= link_to 'Edit Article', edit_article_path(article) %>
                        <%= link_to 'Delete Article', article_path(article), method: :delete, data: {confirm: "Are you sure?"}  %>
                    </div>
                </div>
            </div>
        <% end %>
        </div>
    <% else %>
        <h3>No Articles Found</h3>
    <% end %>
</div>